<Application x:Class="ValorantTracker.Client.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ValorantTracker.Client"
             xmlns:modern="http://modernwpf"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary x:Key="ModernWindow">
            <ResourceDictionary.MergedDictionaries>
                <!--add these 3 if you want to have common controls use the modern styles by default -->
                <ResourceDictionary Source="/ModernWPF;component/Themes/ModernBase.xaml" />
                <ResourceDictionary Source="/ModernWPF;component/Themes/ModernLight.xaml" />
                <ResourceDictionary Source="/ModernWPF;component/Themes/ModernStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
